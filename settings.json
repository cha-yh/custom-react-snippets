{
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "editor.minimap.enabled": false,
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,
    "terminal.integrated.rendererType": "dom",

    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text",
        "foreground": "green",
        "background": "white",
        "opacity": 20,
        "iconColour": "blue"
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "never",
    "window.zoomLevel": 0,

    "highlight.decorations": { "rangeBehavior": 3 }, // Default decorations from which all others inherit from
    "highlight.regexFlags": "g", // Default flags used when building the regexes
    "highlight.regexes": {
        "((//#) .*)": [ // A regex will be created from this string, don't forget to double escape it
            {
                "color": "white",
                "backgroundColor": "#9400d3"
            }, 
          ],
          "((//##) .*)": [ // A regex will be created from this string, don't forget to double escape it
            {
                "color": "white",
                "backgroundColor": "#197319"
            }, 
          ],
          "((//TEMP))": [ // A regex will be created from this string, don't forget to double escape it
            {
                "color": "white",
                "backgroundColor": "#0082fb"
            }, 
          ]
    }, // Object mapping regexes to options or an array of decorations to apply to the capturing groups
    "highlight.maxMatches": 250,
    "todo-tree.tree.showScanModeButton": false,
    "editor.autoIndent": "advanced" // Maximum number of matches to decorate per regex, in order not to crash the app with accidental cathastropic regexes

}
